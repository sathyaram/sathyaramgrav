/**
 * Overlay Styles
 * Copyright 2018 Sathya Ram
 */
#overlay {
  display: block;
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 999;
  background: white;
  -webkit-transform: translateY(0);
  transform: translateY(0);
  opacity: 1;
  transition: opacity 1s ease, background .4s ease, -webkit-transform 1s ease;
  transition: opacity 1s ease, transform 1s ease, background .4s ease;
  transition: opacity 1s ease, transform 1s ease, background .4s ease, -webkit-transform 1s ease; }
  #overlay.transparent {
    background: rgba(255, 255, 255, 0); }
  #overlay.gone {
    -webkit-transform: translateY(-100%);
    transform: translateY(-100%);
    pointer-events: none;
    z-index: 12; }
  #overlay:after {
    content: "";
    position: absolute;
    height: 0;
    bottom: -50px;
    right: 0;
    z-index: -9;
    border-style: solid;
    border-width: 50px 50vw 0 50vw;
    border-color: white transparent transparent transparent; }

#loader {
  display: block;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0; }
  #loader img {
    display: block;
    position: absolute;
    width: 100px;
    top: calc(50% - 35px);
    left: 50%;
    -webkit-transform-origin: 50%;
    transform-origin: 50%;
    -webkit-transform: translateX(-50%);
    transform: translateX(-50%);
    -webkit-animation-name: logo-rotate;
    animation-name: logo-rotate;
    -webkit-animation-duration: .6s;
    animation-duration: .6s;
    -webkit-animation-timing-function: linear;
    animation-timing-function: linear;
    -webkit-animation-delay: 0s;
    animation-delay: 0s;
    -webkit-animation-iteration-count: infinite;
    animation-iteration-count: infinite; }
